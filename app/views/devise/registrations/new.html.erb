<div class="columns">
  <div class="column is-half">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "box"}) do |f| %>
    <h2 class="is-size-3 has-text-weight-bold">Sign up</h2>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="is-flex flex-direction-row">
      <div class="field is-flex-grow-1 mr-2">
        <%= f.label :name, class:"label" %>
        <%= f.text_field :name, autofocus: false,  class:"input" %>
      </div>

      <div class="field is-flex-grow-1">
        <%= f.label :zipcode, class:"label" %>
        <%= f.text_field :zipcode, autofocus: false, class:"input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :email, class:"label" %>
      <%= f.email_field :email, autofocus: false, autocomplete: "email", class:"input" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"label" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class:"label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up",class:"button is-primary is-medium" %>
    </div>
    <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>

