<div class="columns">
  <div class="column is-half">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:"box" }) do |f| %>
        <h2 class="is-size-3">Forgot your password?</h2>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field">
          <%= f.label :email, class:"label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input" %>
        </div>

        <div class="actions">
          <%= f.submit "Send me instructions", class:"button is-dark" %>
        </div>
        <%= render "devise/shared/links" %>
      <% end %>
  </div>
</div>
